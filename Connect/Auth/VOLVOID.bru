meta {
  name: VOLVOID
  type: http
  seq: 3
}

post {
  url: {{VOLVO_ID_HOST}}/as/token.oauth2
  body: formUrlEncoded
  auth: basic
}

headers {
  content-type: application/x-www-form-urlencoded
}

auth:basic {
  username: {{VOLVO_ID_CLIENT}}
  password: {{VOLVO_ID_SECRET}}
}

body:form-urlencoded {
  grant_type: client_credentials
  scope: account_api:account:create account_api:account:read
}

script:post-response {
  bru.setVar('VOLVOID_BEARER',res.body.access_token);
}
